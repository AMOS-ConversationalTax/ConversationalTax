{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "scripts": {
    "preinstall": "cd ../shared && npm i",
    "format": "prettier --write \"**/*.ts\"",
    "build": "tsc",
    "start": "nodemon",
    "start:prod": "node dist/src/main.js",
    "test": "tsc && jest --verbose",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "docker build -t conversational-tax .",
    "docker:run": "docker run -p 3000:3000 -d --net=conversational-tax-network conversational-tax",
    "lint": "tslint -c tslint.json --project tsconfig.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.1",
    "@nestjs/core": "^5.0.1",
    "@nestjs/microservices": "^5.0.1",
    "@nestjs/mongoose": "^5.0.0",
    "@nestjs/testing": "^5.0.1",
    "@nestjs/websockets": "^5.0.1",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "conv-tax-shared": "file:../shared/",
    "dialogflow": "^0.3.0",
    "mongoose": "^5.1.5",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.1",
    "typescript": "^2.9.2",
    "ws": "^5.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.1.0",
    "@types/node": "^8.10.20",
    "@types/supertest": "^2.0.4",
    "@types/ws": "^5.1.2",
    "jest": "^23.1.0",
    "mockgoose-fix": "^7.3.6",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.5",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.1",
    "tsconfig-paths": "^3.4.0",
    "tslint": "^5.10.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
